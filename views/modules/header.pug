section#header.header-wrapper
			nav.navbar.navbar-default
				.container
					.col-xs-5.col-sm-2.col-md-2.col-lg-2
						.logo
							a.navbar-brand(href='/')
								span.sh Ш
								span.plus ++
					.col-xs-12.col-sm-7.col-md-8.col-lg-8
						.main-menu
							.col-xs-12.col-sm-12.col-md-12.col-lg-12
								form.navbar-form.navbar-right
									- const searchValue = qsParams ? qsParams.search : ''
									input#search.form-control(type='text' placeholder='Найти книгу' value=searchValue)
									script.
										$("#search").bind("keypress", function(e) {
											if (e.keyCode == 13) {
												e.preventDefault();
												location.href = `/?search=${encodeURIComponent($(this).val())}`;
											}
										});
					.col-xs-2.col-sm-3.col-md-2.col-lg-2.hidden-xs
						.social
							a(href='https://www.facebook.com/shpp.kr/' target='_blank')
								span.fa-stack.fa-sm
									i.fa.fa-facebook.fa-stack-1x
							a(href='http://programming.kr.ua/ru/courses#faq' target='_blank')
								span.fa-stack.fa-sm
									i.fa.fa-book.fa-stack-1x
							a(href='/admin')
								span.fa-stack.fa-sm
									i.fa.fa-user-secret.fa-stack-1x